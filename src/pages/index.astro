---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Services from '~/components/widgets/Services.astro';
import Portfolio from '~/components/widgets/Portfolio.astro';
import Difference from '~/components/widgets/Difference.astro';
import Contact from '~/components/widgets/Contact.astro'
import FAQs from '~/components/widgets/FAQs.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero />
	<Services />
	<Difference />
	<Portfolio />
	<Contact />
	<FAQs />
</Layout>
